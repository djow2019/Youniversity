<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/build_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cancel_build"
        android:layout_width="@dimen/action_bar_size"
        android:layout_height="@dimen/action_bar_size"
        android:background="@drawable/cancel_build"
        android:onClick="onCancelBuildClick" />

    <ImageView
        android:id="@+id/build_lecture_hall"
        android:layout_width="@dimen/action_bar_size"
        android:layout_height="@dimen/action_bar_size"
        android:background="@drawable/lecture_hall_b"
        android:onClick="onBuildingModeClicked"
        android:tag="@string/lecture_hall_num" />

    <ImageView
        android:id="@+id/build_dining_hall"
        android:layout_width="@dimen/action_bar_size"
        android:layout_height="@dimen/action_bar_size"
        android:background="@drawable/food_building_b"
        android:onClick="onBuildingModeClicked"
        android:tag="@string/dining_hall_num" />

    <ImageView
        android:id="@+id/build_residence_hall"
        android:layout_width="@dimen/action_bar_size"
        android:layout_height="@dimen/action_bar_size"
        android:background="@drawable/dorm_b"
        android:onClick="onBuildingModeClicked"
        android:tag="@string/residence_hall_num" />

    <ImageView
        android:id="@+id/build_gym"
        android:layout_width="@dimen/action_bar_size"
        android:layout_height="@dimen/action_bar_size"
        android:background="@drawable/gym_b"
        android:onClick="onBuildingModeClicked"
        android:tag="@string/gym_num" />

</LinearLayout>