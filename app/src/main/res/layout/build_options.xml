<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/build_options"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/cancel_build"
        android:layout_width="@dimen/action_bar_size"
        android:layout_height="@dimen/action_bar_size"
        android:background="#FFADBEC4"
        android:onClick="onCancelBuildClick" />

    <ImageView
        android:id="@+id/build_lecture_hall"
        android:layout_width="@dimen/action_bar_size"
        android:layout_height="@dimen/action_bar_size"
        android:background="#ffb30000"
        android:onClick="onLectureHallClick"
        android:tag="10" />


</LinearLayout>