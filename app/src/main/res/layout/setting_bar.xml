<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/setting_bar"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/back"
        android:layout_width="@dimen/action_bar_size"
        android:layout_height="@dimen/action_bar_size"
        android:background="@drawable/cancel_build"
        android:onClick="onBackClicked" />

    <ImageView
        android:id="@+id/save"
        android:layout_width="@dimen/action_bar_size"
        android:layout_height="@dimen/action_bar_size"
        android:background="@drawable/lecture_hall_b"
        android:onClick="onSaveClicked" />

    <ImageView
        android:id="@+id/quit"
        android:layout_width="@dimen/action_bar_size"
        android:layout_height="@dimen/action_bar_size"
        android:background="@drawable/food_building_b"
        android:onClick="onQuit2Clicked" />


</LinearLayout>